<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".MainActivity" android:id="@+id/background">

    <TextView
            android:text="@string/nombre_alumno"
            android:layout_width="328dp"
            android:layout_height="81dp"
            android:id="@+id/nombre_alumno" android:textColor="@color/nombre_alumno_color"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.613"
            android:textSize="36sp" android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/grupo_pertenece"/>
    <TextView
            android:text="@string/grupo_pertenece"
            android:layout_width="210dp"
            android:layout_height="82dp"
            android:id="@+id/grupo_pertenece" android:textColor="@color/grupo_pertenece"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.268" android:gravity="center" android:textSize="30sp"/>
    <ImageView
            android:layout_width="230dp"
            android:layout_height="267dp" app:srcCompat="@drawable/imagenapp"
            android:id="@+id/imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.765"
            app:layout_constraintHorizontal_bias="0.593"/>

</android.support.constraint.ConstraintLayout>